  $form['photoswipe']['photoswipe_jquery_mobile'] = array(
    '#type' => 'checkbox',
    '#title' => t('Force jQuery Mobile integration'),
    '#default_value' => variable_get('photoswipe_jquery_mobile', FALSE),
